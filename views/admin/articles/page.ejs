<%- include('../../partials/head.ejs') %>
  <body>
    <%- include('../../partials/homenavbar.ejs') %>

    <div class="container">
      <% result.articles.rows.forEach(function(article) { %>
        <div class="card mb-3">
          <div class="card-header">
            <h1><%= article.title %></h1>
          </div>
          <div class="card-body">
            <a class="btn btn-success" href="/<%= article.slug %>">Ler</a>
          </div>
        </div>
      <% }) %>

      <div class="row">
        <div class="column">
          <% if(result.page > 2 ) { %>
            <a style="float: left;" href="/articles/<%= result.page - 1 %>">< Prev </a>
          <% } else if(result.page == 2) { %>
            <a style="float: left;" href="/articles/1">< Prev </a>
          <% } %>

          <% if(result.next ) { %>
            <a style="float: right;" href="/articles/<%= result.page + 1 %>">Next ></a>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('../../partials/scripts.ejs') %>
  </body>
</html>