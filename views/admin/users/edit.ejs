<%- include('../../partials/head.ejs') %>
  <body>
    <%- include('../../partials/navbar.ejs') %>
    
    <div class="container">
      <div class="card">
        <div class="card-header">
          <h2>Edição de usuário</h2>
        </div>
        <div class="card-body">
          <form action="/users/update" method="POST" >
            <input 
              type="hidden" 
              name="id" 
              value="<%= user.id %>"
            >
            <input 
              class="form-control" 
              type="email" 
              name="email" 
              placeholder="Seu novo email"
              value="<%= user.email %>"
            >
            <button class="btn btn-success mt-1">Atualizar</button>
          </form>
        </div>
      </div>
    </div>
    
    <%- include('../../partials/scripts.ejs') %>
  </body>
</html>
